{
  "manifest_version": 2,
  "name": "Скачать музыку с вк - sVKashka",
  "description": "Удобная качалка музыки vk с мультивыбором!",
  "version": "0.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://vk.com/*"
      ],
      "js": [
        "lib/jquery-3.2.1.min.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "permissions": [
    "https://vk.com/*",
    "downloads",
    "notifications",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "sVKashka",
    "default_icon": "icon16.png"
  }
}